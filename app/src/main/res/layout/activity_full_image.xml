<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edwinbustamante.gruposcochalos.MainActivity">


    <ImageView
        android:id="@+id/imageViewFull"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/black"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </ImageView>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/floatingActionMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:fab_addButtonColorNormal="@color/red_A700"
        app:fab_addButtonColorPressed="@color/red_A100"
        app:fab_addButtonSize="mini"

        app:fab_labelStyle="@style/menu_labels_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/descargarFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="descaragarFoto"
            app:fab_colorNormal="@color/amber_800"
            app:fab_colorPressed="@color/amber_A100"
            app:fab_icon="@drawable/ic_file_download_black_24dp"
            app:fab_size="mini"
            app:fab_title="Descargar" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/compartirFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="compartiExternamente"
            app:fab_colorNormal="@color/light_blue_700"
            app:fab_colorPressed="@color/light_blue_A200"
            app:fab_icon="@drawable/ic_share"
            app:fab_size="mini"
            app:fab_title="Compartir externamente" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>
    <!-- TODO: Update blank fragment layout -->


</android.support.constraint.ConstraintLayout>

